	--color-surface-800: 41 41 51; /* ⬅ #292933 */
	--color-surface-900: 34 34 42; /* ⬅ #22222a */
}

h1 {
	font-weight: 700;
}

h2 {
	font-weight: 700;
}

h3 {
	font-weight: 600;
}
