@import url('https://fonts.googleapis.com/css2?family=Figtree:wght@400;500;600;700;800&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

:root {
	/* =~= Theme Properties =~= */
	--theme-font-family-base: 'Inter', system-ui;
	--theme-font-family-heading: 'Figtree', system-ui;
	--theme-font-color-base: 0 0 0;
	--theme-font-color-dark: 255 255 255;
	--theme-rounded-base: 12px;
	--theme-rounded-container: 8px;
	--theme-border-base: 1px;
	/* =~= Theme On-X Colors =~= */
	--on-primary: 255 255 255;
	--on-secondary: 255 255 255;
	--on-tertiary: 255 255 255;
	--on-success: 0 0 0;
	--on-warning: 0 0 0;
	--on-error: 0 0 0;
	--on-surface: 255 255 255;
	/* =~= Theme Colors  =~= */
	/* primary | #3374ff */
	--color-primary-50: 224 234 255; /* ⬅ #e0eaff */
	--color-primary-100: 214 227 255; /* ⬅ #d6e3ff */
	--color-primary-200: 204 220 255; /* ⬅ #ccdcff */
	--color-primary-300: 173 199 255; /* ⬅ #adc7ff */
	--color-primary-400: 112 158 255; /* ⬅ #709eff */
	--color-primary-500: 51 116 255; /* ⬅ #3374ff */
	--color-primary-600: 46 104 230; /* ⬅ #2e68e6 */
	--color-primary-700: 38 87 191; /* ⬅ #2657bf */
	--color-primary-800: 31 70 153; /* ⬅ #1f4699 */
	--color-primary-900: 25 57 125; /* ⬅ #19397d */
	/* secondary | #454555 */
	--color-secondary-50: 227 227 230; /* ⬅ #e3e3e6 */
	--color-secondary-100: 218 218 221; /* ⬅ #dadadd */
	--color-secondary-200: 209 209 213; /* ⬅ #d1d1d5 */
	--color-secondary-300: 181 181 187; /* ⬅ #b5b5bb */
	--color-secondary-400: 125 125 136; /* ⬅ #7d7d88 */
	--color-secondary-500: 69 69 85; /* ⬅ #454555 */
	--color-secondary-600: 62 62 77; /* ⬅ #3e3e4d */
	--color-secondary-700: 52 52 64; /* ⬅ #343440 */
	--color-secondary-800: 41 41 51; /* ⬅ #292933 */
	--color-secondary-900: 34 34 42; /* ⬅ #22222a */
	/* tertiary | #516091 */
	--color-tertiary-50: 229 231 239; /* ⬅ #e5e7ef */
	--color-tertiary-100: 220 223 233; /* ⬅ #dcdfe9 */
	--color-tertiary-200: 212 215 228; /* ⬅ #d4d7e4 */
	--color-tertiary-300: 185 191 211; /* ⬅ #b9bfd3 */
	--color-tertiary-400: 133 144 178; /* ⬅ #8590b2 */
	--color-tertiary-500: 81 96 145; /* ⬅ #516091 */
